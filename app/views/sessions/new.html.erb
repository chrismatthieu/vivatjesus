<p id="notice"><%= alert %></p>
<img src="/images/k_of_c_logo.png" width="300" align="right">

<h1>Log In</h1><br />
<%= form_tag sessions_path do %>

	<div>
	<%= text_field_tag :username, params[:username], :class=>"input-large focus", :placeholder=>"Username"%> <!-- , :autofocus => true -->
	</div>
	<div>
	<%= password_field_tag :password, params[:password], :class=>"input-large", :placeholder=>"password" %>
	</div>

  <div>
    <%= submit_tag "Log in", :class=>"btn btn-primary btn-large" %>
  </div>
  
<% end %>

<p><%= link_to "Forgot password?", new_password_reset_path %></p>

