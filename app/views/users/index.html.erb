<h1>Listing users</h1>

<table>
  <thead>
    <th>Username</th>
    <th>Email</th>
    <th>Member</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= gravatar_image_tag user.email, :class => "gravatar", :width => "25" %> <%= user.fullname rescue ""%> (<%= user.username %>)</td>
    <td><%= user.email %></td>
    <td><%= user.member %></td>
    <td><%= user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

