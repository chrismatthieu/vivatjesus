<h1><%=@council.councilname%></h1><br />

<div class="row-fluid">
  	<div class="span8">
	    <p><%=@council.about%></p><br /><br />
	  	<p><a class="btn btn-primary btn-large" href="/about">Learn more &raquo;</a></p>
	</div>
	<div class="span4">
		
		<p class="pull-right">
		<a href="<%=@council.facebookurl%>"><%=image_tag "/images/facebook.png", :width => "130"%></a>
		<a href="<%=@council.linkedinurl%>"><%=image_tag "/images/linkedin.png", :width => "130"%></a>
		<a href="<%=@council.twitterurl%>"><%=image_tag "/images/twitter1.png", :width => "130"%></a>
        <a href="<%=@council.mobileurl%>"><%=image_tag "/images/mobile.png", :width => "130"%></a>
        <!-- <li class="last"><a href="/posts/rss"><%=image_tag "/images/rss.gif"%></a></li> -->
      </p>
	</div>
</div>
	
<% if @post %>
<h2>
<p class="well">
<%= gravatar_image_tag @post.user.email, :class => "gravatar", :width => "25" %> 
<a href="/posts/<%= @post.id.to_s rescue ""%>"><%= @post.postname rescue ""%></a> 
</p>
</h2>

<p>
<%= raw(@post.postbody) rescue ""%>
</p>
<a href="http://twitter.com/share?text=<%= @post.postname rescue ""%>&amp;url=http://vivatjes.us/posts/<%=@post.id%>" class="twitter-share-button">Tweet</a>
	
<!-- Place this tag where you want the +1 button to render -->
<g:plusone href="http://vivatjes.us/posts/<%=@post.id%>"></g:plusone>

<!--  Place this tag after the last plusone tag -->
<script type="text/javascript">
  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>
	
<div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=151901608223813&amp;xfbml=1"></script><fb:like href="http://vivatjes.us/posts/<%=@post.id%>" send="true" width="450" show_faces="true" font=""></fb:like>
<% end %>
<br class="clear" />


